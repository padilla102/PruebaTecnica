@model MunicipioViewModel

@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Municipio</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label"> Codigo</label>
                <input asp-for="Municipio.Id" class="form-control" readonly/>
                <span asp-validation-for="Municipio.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Nombre</label>
                <input asp-for="Municipio.Name" class="form-control" />
                <span asp-validation-for="Municipio.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Estado</label>
                @Html.DropDownListFor(m => m.Municipio.status,Model.ListStatus,"Seleccione",
                new { @class = "form-control" })
                <span asp-validation-for="Municipio.status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
