@model PruebaTecnica.WebUI.Models.MunicipioViewModel

@{
    ViewData["Title"] = "Editar Municipio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Municipio</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label"> Codigo</label>
                <input asp-for="Municipio.Id" class="form-control" readonly />
                <span asp-validation-for="Municipio.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Nombre</label>
                <input asp-for="Municipio.Name" class="form-control" />
                <span asp-validation-for="Municipio.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Estado</label>
                @Html.DropDownListFor(m => m.Municipio.StatusId, new SelectList(Model.ListStatus, "Id", "Name", Model.Municipio.StatusId), new { @class = "form-control" })
                <span asp-validation-for="Municipio.StatusId" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                    <label class="control-label">Región</label>
                    @Html.DropDownListFor(m => m.Municipio.RegionId, new SelectList(Model.ListRegions, "Id", "Name", Model.Municipio.RegionId),"Seleccione", new { @class = "form-control" })
                    <span asp-validation-for="Municipio.RegionId" class="text-danger"></span>
                </div>*@
            <div class="form-group">

                @Html.ActionLink("Regresar", "List", new { @class = "btn btn-dark" })
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label class="control-label">Municipios Vinculados</label>
            <table class="table">
                <thead>
                    <tr>
                        <th class="text-center">
                            Codigo
                        </th>
                        <th class="text-left">
                            Nombre
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Municipio.RegionMunicipio != null)
                    {
                        @foreach (var item in Model.Municipio.RegionMunicipio)
                        {
                            <tr>
                                <td class="text-center">@item.Region.Id</td>
                                <td class="text-left">@item.Region.Name</td>
                                <td>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
